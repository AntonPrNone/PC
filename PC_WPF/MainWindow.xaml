<Window x:Class="PC_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC_WPF"
        mc:Ignorable="d"
        Title="Сборка" Height="450" Width="800" Background="Black">
    <Grid>
        <StackPanel  Orientation="Vertical" VerticalAlignment="Center">
            <Button x:Name="btn_create" Content="Создать сборку" Height="35" Width="203" Background="White" FontSize="18" Margin="0,0,0,30" Click="btn_create_Click" FontWeight="Normal"/>
            <Button x:Name="btn_delete" Content="Удалить сборку" Height="35" Width="203" Background="White" FontSize="18" Margin="0,0,0,30" Click="btn_delete_Click"/>
            <Button x:Name="btn_browse" Content="Просмотреть сборку" Height="35" Width="203" Background="White" FontSize="18" Margin="0,0,0,30" Click="btn_browse_Click"/>
        </StackPanel>

    </Grid>
</Window>
