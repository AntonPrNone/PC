<Window x:Class="PC_WPF.Error_InputFormat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC_WPF"
        mc:Ignorable="d"
        Title="Error_InputFormat" Height="254" Width="502" Background="Black" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label1" Content="Неверный формат ввода" HorizontalAlignment="Center" Margin="0,8,0,0" VerticalAlignment="Top" Foreground="Red" FontWeight="Bold" FontSize="30"/>
        <Label x:Name="label1_Copy" Content="Проверьте корректность данных и повторите попытку" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Red" FontWeight="Bold" FontSize="18" RenderTransformOrigin="0.499,-1.16" Margin="0,52,0,0"/>
        <Button Content="Закрыть" HorizontalAlignment="Center" Margin="0,168,0,0" VerticalAlignment="Top" Height="28" Width="136" Click="Button_Click"/>

    </Grid>
</Window>
